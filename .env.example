# ==============================================================================
# Environment Configuration Example
# ==============================================================================
# Copy this file to .env.development for development or .env.production for production
# ==============================================================================

# Database Configuration
DATABASE_URL="postgresql://expenseuser:expensepass@localhost:5432/expensedb"
POSTGRES_USER=expenseuser
POSTGRES_PASSWORD=expensepass
POSTGRES_DB=expensedb
POSTGRES_PORT=5432

# JWT Configuration
# Generate a strong secret: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging Configuration
LOG_LEVEL=info
